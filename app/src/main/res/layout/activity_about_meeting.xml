<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.imagine.cloud.ui.activity.AboutMeetingActivity">


    <!--会议通知，会议日程，补充说明，会议资料，电子发票，申请退款-->

    <include
        layout="@layout/header_layout"
        ></include>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">


           <View
               style="@style/Divider"
               android:layout_marginTop="@dimen/common_top_bottom_margin"
               ></View>


           <TextView
               android:id="@+id/notice"
               android:paddingLeft="@dimen/common_left_right_margin"
               android:drawableRight="@drawable/right_arrow"
               android:paddingRight="@dimen/common_left_right_margin"
               android:background="@drawable/white_press_bg"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common50dp"
               android:text="会议通知"
               android:gravity="center_vertical"
               android:drawableLeft="@drawable/about_meetion_notice"
               android:drawablePadding="@dimen/common10dp"
               />

           <View style="@style/Divider"></View>


           <View
               style="@style/Divider"
               android:layout_marginTop="@dimen/common_top_bottom_margin"
               ></View>


           <TextView
               android:id="@+id/calender"
               android:paddingLeft="@dimen/common_left_right_margin"
               android:drawableRight="@drawable/right_arrow"
               android:paddingRight="@dimen/common_left_right_margin"
               android:background="@drawable/white_press_bg"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common50dp"
               android:text="会议日程"
               android:gravity="center_vertical"
               android:drawableLeft="@drawable/about_meetion_calend"
               android:drawablePadding="@dimen/common10dp"
               />

           <View style="@style/Divider"></View>

           <View
               style="@style/Divider"
               android:layout_marginTop="@dimen/common_top_bottom_margin"
               ></View>


           <TextView
               android:id="@+id/replenish"
               android:paddingLeft="@dimen/common_left_right_margin"
               android:drawableRight="@drawable/right_arrow"
               android:paddingRight="@dimen/common_left_right_margin"
               android:background="@drawable/white_press_bg"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common50dp"
               android:text="补充说明"
               android:gravity="center_vertical"
               android:drawableLeft="@drawable/about_meeting_ziliao"
               android:drawablePadding="@dimen/common10dp"
               />

           <View style="@style/Divider"></View>

           <View
               style="@style/Divider"
               android:layout_marginTop="@dimen/common_top_bottom_margin"
               ></View>


           <TextView
               android:id="@+id/material"
               android:paddingLeft="@dimen/common_left_right_margin"
               android:drawableRight="@drawable/right_arrow"
               android:paddingRight="@dimen/common_left_right_margin"
               android:background="@drawable/white_press_bg"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common50dp"
               android:text="会议资料"
               android:gravity="center_vertical"
               android:drawableLeft="@drawable/about_meeting_ziliao"
               android:drawablePadding="@dimen/common10dp"
               />

           <View style="@style/Divider"></View>

           <View
               style="@style/Divider"
               android:layout_marginTop="@dimen/common_top_bottom_margin"
               ></View>


           <TextView
               android:id="@+id/invoice"
               android:paddingLeft="@dimen/common_left_right_margin"
               android:drawableRight="@drawable/right_arrow"
               android:paddingRight="@dimen/common_left_right_margin"
               android:background="@drawable/white_press_bg"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common50dp"
               android:text="电子发票"
               android:gravity="center_vertical"
               android:drawableLeft="@drawable/about_meeting_fapiao"
               android:drawablePadding="@dimen/common10dp"
               />

           <View style="@style/Divider"></View>

           <View
               style="@style/Divider"
               android:layout_marginTop="@dimen/common_top_bottom_margin"
               ></View>
           <TextView
               android:id="@+id/refund_bt"
               android:paddingLeft="@dimen/common_left_right_margin"
               android:drawableRight="@drawable/right_arrow"
               android:paddingRight="@dimen/common_left_right_margin"
               android:background="@drawable/white_press_bg"
               android:layout_width="match_parent"
               android:layout_height="@dimen/common50dp"
               android:text="申请退款"
               android:gravity="center_vertical"
               android:drawableLeft="@drawable/about_meeting_fapiao"
               android:drawablePadding="@dimen/common10dp"
               />

       </LinearLayout>








   </ScrollView>




</LinearLayout>
