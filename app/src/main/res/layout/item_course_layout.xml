<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/item_color_bg"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_marginBottom="@dimen/common_top_bottom_margin"
        android:layout_marginTop="@dimen/common_top_bottom_margin"
        android:layout_marginLeft="@dimen/common_left_right_margin"
        android:id="@+id/image"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/common80dp"
        android:layout_height="@dimen/common80dp"
        android:src="@drawable/test"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/common_top_bottom_margin"
        android:layout_marginRight="@dimen/common_left_right_margin"
        android:layout_width="match_parent"
        android:weightSum="6"
        android:layout_marginLeft="@dimen/common6dp"
        android:layout_height="@dimen/common80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="哈佛公开课：幸福树"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                style="@style/normal_text_view_content"
                android:text="作者"
                android:layout_marginRight="@dimen/common0dp"
                />
            <TextView
                android:id="@+id/author_name"
                style="@style/normal_text_view_content"
                android:text="张三"
                android:layout_marginLeft="@dimen/common4dp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                style="@style/normal_text_view_content"
                android:text="时长"
                android:layout_marginRight="@dimen/common0dp"
                />
            <TextView
                android:id="@+id/play_time"
                style="@style/normal_text_view_content"
                android:text="04:24"
                android:layout_marginLeft="@dimen/common4dp"
                android:textColor="@color/text_color_orange"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/people_re_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000"
                android:lines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/colorPrimary"
                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="人收听"
                android:lines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/text_color_gray"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>