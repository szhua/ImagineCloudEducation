<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.imagine.cloud.ui.activity.SignUpActivity">

    <include layout="@layout/header_layout"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/common_left_right_margin"
                android:paddingRight="@dimen/common_left_right_margin">

                <TextView
                    style="@style/normal_text_view_title"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:layout_height="@dimen/common50dp"
                    android:layout_marginRight="@dimen/common0dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_16sp"
                    android:text="会议名称" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/meeting_title"
                    style="@style/normal_text_view_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="@dimen/common_top_bottom_margin" android:background="@color/white"></View>
            <View style="@style/Divider"></View>


            <com.imagine.cloud.widget.NormalInputEditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="text"
                app:left_text="姓名"
                app:right_text="商户"
                app:left_text_color="@color/text_color_normal"
                app:right_hint="请输入姓名"
                app:right_hint_color="@color/text_color_light"></com.imagine.cloud.widget.NormalInputEditText>


            <com.imagine.cloud.widget.NormalInputEditText
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="num"
                app:left_text="电话"
                app:right_text="18854175113"
                app:left_text_color="@color/text_color_normal"
                app:right_hint="请输入电话"
                app:right_hint_color="@color/text_color_light"></com.imagine.cloud.widget.NormalInputEditText>


            <com.imagine.cloud.widget.NormalInputEditText
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="text"
                app:left_text="邮箱"
                app:right_text="389894467@qq.com"
                app:left_text_color="@color/text_color_normal"
                app:right_hint="请输入邮箱"
                app:right_hint_color="@color/text_color_light"></com.imagine.cloud.widget.NormalInputEditText>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common46dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_left_right_margin"
                    android:gravity="center"
                    android:text="性别"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_16sp" />

                <RadioGroup
                    android:id="@+id/sex_radios"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:drawableLeft="@drawable/sin_check_selector"
                        android:drawablePadding="@dimen/common2dp"
                        android:paddingLeft="@dimen/common_left_right_margin"
                        android:paddingRight="@dimen/common_left_right_margin"
                        android:text="男"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_14sp" />

                    <RadioButton
                        android:id="@+id/female_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:drawableLeft="@drawable/sin_check_selector"
                        android:drawablePadding="@dimen/common2dp"
                        android:paddingLeft="@dimen/common_left_right_margin"
                        android:paddingRight="@dimen/common_left_right_margin"
                        android:text="女"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_14sp" />


                </RadioGroup>


            </RelativeLayout>

            <View style="@style/Divider"></View>

            <com.imagine.cloud.widget.NormalInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="text"
                app:left_text="民族"
                app:right_text="汉"
                android:id="@+id/nation_name"
                app:left_text_color="@color/text_color_normal"
                app:right_hint="请输入民族"
                app:right_hint_color="@color/text_color_light"></com.imagine.cloud.widget.NormalInputEditText>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/select_school_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_press_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common46dp"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/common_left_right_margin"
                    android:paddingRight="@dimen/common_left_right_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/common16dp"
                        android:text="学校"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/school"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@color/white"
                        android:gravity="right|center_vertical"
                        android:text="青岛大学"
                        android:textColor="@color/text_color_gray"
                        android:textColorHint="@color/text_color_light"
                        android:textSize="@dimen/text_size_14sp" />

                </LinearLayout>

                <View style="@style/Divider"></View>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common46dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_left_right_margin"
                    android:gravity="center"
                    android:text="住宿"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_16sp" />

                <RadioGroup
                    android:id="@+id/stay_radios"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/single_stay_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:drawableLeft="@drawable/sin_check_selector"
                        android:drawablePadding="@dimen/common2dp"
                        android:paddingLeft="@dimen/common_left_right_margin"
                        android:paddingRight="@dimen/common_left_right_margin"
                        android:text="单住"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_14sp" />

                    <RadioButton
                        android:id="@+id/multi_stay_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:drawableLeft="@drawable/sin_check_selector"
                        android:drawablePadding="@dimen/common2dp"
                        android:paddingLeft="@dimen/common_left_right_margin"
                        android:paddingRight="@dimen/common_left_right_margin"
                        android:text="合住"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_14sp" />


                </RadioGroup>


            </RelativeLayout>

            <View style="@style/Divider"></View>

            <View
                style="@style/Divider"
                android:layout_marginTop="@dimen/common_top_bottom_margin"></View>

            <com.imagine.cloud.widget.NormalInputEditText
                android:id="@+id/invoice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="text"
                app:left_text="发票抬头"
                app:left_text_color="@color/text_color_normal"
                app:right_hint="请输入发票抬头"
                app:right_text="发票抬头"
                app:right_hint_color="@color/text_color_light"></com.imagine.cloud.widget.NormalInputEditText>


            <com.imagine.cloud.widget.NormalInputEditText
                android:id="@+id/reg_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="text"
                app:left_text="纳税人识别号"
                app:left_text_color="@color/text_color_normal"
                app:right_hint="请输入纳税人识别号"
                app:right_text="8989849347427492849"
                app:right_hint_color="@color/text_color_light"></com.imagine.cloud.widget.NormalInputEditText>

            <com.imagine.cloud.widget.NormalInputEditText
                android:id="@+id/school_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="text"
                app:left_text="地址"
                app:right_text="青岛市南"
                app:left_text_color="@color/text_color_normal"
                app:right_hint="请输入学校地址"
                app:right_hint_color="@color/text_color_light"></com.imagine.cloud.widget.NormalInputEditText>

            <com.imagine.cloud.widget.NormalInputEditText
                android:id="@+id/bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="text"
                app:left_text="开户行"
                app:right_text="工商银行"
                app:left_text_color="@color/text_color_normal"
                app:right_hint="请输入开户行"
                app:right_hint_color="@color/text_color_light"></com.imagine.cloud.widget.NormalInputEditText>

            <com.imagine.cloud.widget.NormalInputEditText
                android:id="@+id/bank_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="text"
                app:left_text="开户行账号"
                app:right_text="8989829478247287428"
                app:left_text_color="@color/text_color_normal"
                app:right_hint="请输入开户行账号"
                app:right_hint_color="@color/text_color_light"></com.imagine.cloud.widget.NormalInputEditText>


            <View style="@style/Divider" android:layout_marginTop="@dimen/common_top_bottom_margin"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common20dp"
                android:background="@color/white"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_top_bottom_margin"
                    android:layout_marginLeft="@dimen/common_left_right_margin"
                    android:layout_marginTop="@dimen/common_top_bottom_margin"
                    android:text="其他要求"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_16sp" />

                <EditText
                    android:id="@+id/others"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common100dp"
                    android:layout_marginBottom="@dimen/common20dp"
                    android:gravity="left|top"
                    android:textSize="@dimen/text_size_14sp"
                    android:padding="@dimen/common6dp"
                    android:text=""
                    android:hint="@string/notice_string"
                    android:textColor="@color/text_color_normal"
                    android:textColorHint="@color/text_color_light"
                    android:layout_marginLeft="@dimen/common_left_right_margin"
                    android:layout_marginRight="@dimen/common_left_right_margin"
                    android:background="@drawable/edit_light_gray" />

            </LinearLayout>


            <TextView
                style="@style/normal_bt_style"
                android:text="下一步"
                android:id="@+id/next_bt"
                android:layout_marginBottom="@dimen/common30dp"
                ></TextView>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
